<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/body">

        <LinearLayout android:id="@+id/linearLayout1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:padding="15dip">

            <TextView
            android:text="@string/Rot"
            android:id="@+id/Rot"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>


            <EditText android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/accountName"
                android:inputType="textEmailAddress"
                android:hint="@string/uc_lbl_username"/>


            <EditText android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/accountPassword"
                android:inputType="textPassword"
                android:hint="@string/uc_lbl_password"
                android:layout_marginBottom="10dp"/>

            <Button  android:layout_gravity="center_horizontal"
                android:onClick="onSaveClick"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/submit"
                android:text="@string/submit"
                style="@style/TextButton"/>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/forgotPassword"
                android:onClick="onForgetClick"
                android:clickable="true" />

        </LinearLayout>

        <ProgressBar android:id="@+id/ProgressB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:progress="1" />

        <View android:id="@+id/View03"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout android:id="@+id/linearLayout2"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:padding="15dip">

            <TextView
                android:text="@string/NoRot"
                android:id="@+id/NoRot"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <Button  android:layout_gravity="center_horizontal"
                android:onClick="onGoClick"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Go"
                android:text="@string/go"
                android:layout_marginBottom="10dp"
                style="@style/TextButton"
                android:padding="10dp"/>

            <Button  android:layout_gravity="center_horizontal"
                android:onClick="onContactClick"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Contact"
                android:text="@string/contact"
                style="@style/TextButton"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
